# PDF Converter Configuration
# Copy this file to .env and modify as needed

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000

# Worker Configuration
MAX_WORKERS=4
CONVERSION_TIMEOUT=40

# File Limits
MAX_FILE_SIZE=52428800

# Directory Configuration
TEMP_DIR=/tmp
LOG_DIR=logs

# LibreOffice Configuration (optional)
# LIBREOFFICE_PATH=/usr/bin/libreoffice

# Cleanup Configuration
CLEANUP_INTERVAL=600
MAX_FILE_AGE=3600

# Logging Configuration
LOG_LEVEL=INFO

# High Volume Recommendations:
# For QEMU VM (4 cores, 16GB RAM):
# MAX_WORKERS=4
# CONVERSION_TIMEOUT=40
# Expected: 6-8 conversions/minute

# For dedicated server (8+ cores, 32+ GB RAM):
# MAX_WORKERS=12
# CONVERSION_TIMEOUT=25
# Expected: 20-30 conversions/minute
